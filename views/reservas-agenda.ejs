<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="stylesheets/styles.css">
    <script defer src="javascripts/script.js"></script>
    <script defer src="javascripts/carousel.js"></script>
    <script defer src="javascripts/select-box.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <link rel="icon" type="image/png" sizes="16x16" href="images/favicon.ico">
    <title><%= pageTitle %></title>
</head>

<body>
    <!-- DIV PAI DE TODAS -->
    <div class="container">
        <!-- Fundo escuro do modal -->
        <div id="background-modal" onclick="toggleBackgroundModal()"></div>

        <%- include('./partials/navbar') %>

        <!-- Conteudo -->

        <div class="feed-container">

            <!-- Header com Nav, Hendy e Titulo -->
            <header>
                <button class="menu-btn" onclick="openNav()">
                    <img src="images/icones-mural/Cinza/menu.svg" alt="Icone do menu">
                </button>

                <!-- Icone + Titulo da Pagina -->
                <%- include('./partials/pageTitle') %>

                <!-- Hendy -->
                <%- include('./partials/hendy') %>

            </header>


            <!-- Conteudo Principal -->
            <main>
                <!-- Divisória (parte do Titulo) -->
                <div class="page-title-linha-box"></div>

                <!-- Calendário -->
                <%- include('./partials/calendario') %>
                
            </main>
        </div>

        <!-- Modais -->
        <div id="open-modal" class="modal modal--reserva">
            <!-- Modal Novo Post -->
            <div id="idmodal-agenda modal--reserva" class="modalInterno">
                <div class="enquete__header">
                    <h2 class="enquete__heading">reservar</h2>
                    <i class="enquete__icon" data-feather="x"></i>
                </div>
                <div class="new-foto-mensagem new-foto-mensagem--reserva">
                    <img class="new-foto-mensagem__img" src="images/posts-mural/hendy-almeida.jpg">
                    <h2 class="reserva-data">Salão de Festas</h2>
                    <p class="enquete__option enquete__option--bold enquete__option--reserva">
                        07/09/2020
                    </p>

                    <div class="enquete__periodo enquete__periodo--reserva">
                        <div class="periodo-text">
                            <span class="enquete__option enquete__option--reserva">Em nome do</span>
                        </div>
    
                        <div class="custom-select enquete__select enquete__select--reserva">
                            <select>
                                <option value="0">Apto. 1</option>
                                <option value="1">Apto. 2</option>
                                <option value="2">Apto. 3</option>
                            </select>
                        </div>
                    </div>

                </div>


                <div class="new-cancel-send">

                    <button class="enviar-modal-novo" type="submit">Reservar</button>
                </div>
            </div>

            <div id="idmodal-agendaMob modal--reserva" class="modalInterno">
                <div class="enquete__header">
                    <h2 class="enquete__heading">reservar</h2>
                    <i class="enquete__icon" data-feather="x"></i>
                </div>
                <div class="new-foto-mensagem new-foto-mensagem--reserva">
                    <img class="new-foto-mensagem__img" src="images/posts-mural/hendy-almeida.jpg">
                    <h2 class="reserva-data">Salão de Festas</h2>
                    <p class="enquete__option enquete__option--bold enquete__option--reserva">
                        07/09/2020
                    </p>

                    <div class="enquete__periodo enquete__periodo--reserva">
                        <div class="periodo-text">
                            <span class="enquete__option enquete__option--reserva">Em nome do</span>
                        </div>
    
                        <div class="custom-select enquete__select enquete__select--reserva">
                            <select>
                                <option value="0">Apto. 1</option>
                                <option value="1">Apto. 2</option>
                                <option value="2">Apto. 3</option>
                            </select>
                        </div>
                    </div>

                </div>


                <div class="new-cancel-send">

                    <button class="enviar-modal-novo" type="submit">Reservar</button>
                </div>
            </div>

        </div>
    </div>
    <script>
        feather.replace()
    </script>
</body>

</html>